@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h1 class="display-4 text-center">Todo App</h1>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <form class="col-3" method="post">
            <input type="hidden" value="add" name="action" />
            <div class="mb-3">
                <label for="titleInput" class="form-label">Title</label>
                <input type="text" class="form-control" id="titleInput" name="title" placeholder="My Note">
            </div>
            <div class="mb-3">
                <label for="descriptionInput" class="form-label">Description</label>
                <textarea class="form-control" id="descriptionInput" rows="3" name="description"></textarea>
            </div>
            <button class="btn btn-outline-primary">Add</button>
        </form>
    </div>
    <div class="d-flex flex-column justify-content-center align-content-center">
        <h3 class="text-center">Todo List</h3>
                @Model.Status

                @foreach(var todo in Model.Data)
                {
                    <div class="card mb-5">
                        <div class="card-body">
                            <h5 class="card-title">@todo.Title</h5>
                            <p class="card-text">@todo.Description</p>
                            <form method="post">
                        <input type="hidden" value="del" name="action">
                        <input type="hidden" value="@todo.Title" name="title">
                        <input type="hidden" value="@todo.Description" name="description">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                }
    </div>
</div>
